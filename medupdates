// ======= Ø¯Ø®ÙˆÙ„ Ø§Ù„Ø£Ø¯Ù…Ù† =======
window.handleAdminLogin = function(e) {
  e.preventDefault();
  const pw = document.getElementById('adminPassword').value;
  if (pw === ADMIN_PASSWORD) {
    isAdminLoggedIn = true;
    closeAdminLogin();
