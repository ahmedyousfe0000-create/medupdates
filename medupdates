  listDiv.innerHTML = articles.map(article =>
    `<div style="border-bottom:1px solid #eee;padding:10px 0;">
      ${article.title} <button onclick="deleteArticle('${article.id}')" style="background:#e3342f;color:white;border:none;border-radius:4px;padding:4px 12px;float:left;">Ø­Ø°Ù</button>
    </div>`
  ).join('');
}

